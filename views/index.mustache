{{#messages.error}}
<div class="alert alert-danger" role="alert">
  {{.}}
</div>
{{/messages.error}}
<div id="form-container">
  <form action="/login/" method="post">
    <div class="form-group">
      <label for="username-input">Username</label>
      <input type="text" id="username-input" name="username" class="form-control" />
    </div>
    <div class="form-group">
      <label for="password-input">Password</label>
      <input type="password" id="password-input" name="password" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
  </form>

  <form action="/signup/" method="post">
    <div class="form-group{{#errors.name}} has-danger{{/errors.name}}">
      <label class="form-control-label" for="name-input">Name</label>
      <input type="text" id="name-input" name="name" class="form-control" value="{{name}}" />
      {{#errors.name}}
      <div class="form-control-feedback">{{msg}}</div>
      {{/errors.name}}
    </div>
    <div class="form-group{{#errors.username}} has-danger{{/errors.username}}">
      <label class="form-control-label" for="username-input">Username</label>
      <input type="text" id="username-input" name="username" class="form-control" value="{{username}}" />
      {{#errors.username}}
      <div class="form-control-feedback">{{msg}}</div>
      {{/errors.username}}
    </div>
    <div class="form-group{{#errors.password}} has-danger{{/errors.password}}">
      <label class="form-control-label" for="password-input">Password</label>
      <input type="password" id="password-input" name="password" class="form-control" />
      {{#errors.password}}
      <div class="form-control-feedback">{{msg}}</div>
      {{/errors.password}}
    </div>
    <div class="form-group{{#errors.confirm}} has-danger{{/errors.confirm}}">
      <label class="form-control-label" for="confirm-input">Confirm Password</label>
      <input type="password" id="confirm-input" name="confirm" class="form-control" />
      {{#errors.confirm}}
      <div class="form-control-feedback">{{msg}}</div>
      {{/errors.confirm}}
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
  </form>
</div>
